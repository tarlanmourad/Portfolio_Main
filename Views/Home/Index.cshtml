
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section id="home">
    <div class="overlay-section">
        <div class="container">
            <div class="row">
                <div class="col s12">
                    <div class="home-inner">
