                <!-- Start skills progress bar -->

                <div class="skill-progress-bar">
                    <span>Html5</span>
                    <div class="pro-bar-container color-wisteria">
                        <div class="pro-bar bar-70 color-amethyst" data-pro-bar-percent="70"></div>
                    </div>
                    <span>CSS</span>
                    <div class="pro-bar-container color-wisteria">
                        <div class="pro-bar bar-40 color-amethyst" data-pro-bar-percent="40" data-pro-bar-delay="100"></div>
                    </div>
