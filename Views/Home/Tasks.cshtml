@using Portfolio_Main.Models.EntityFramework
@model List<ToDoList>


@{
    ViewBag.Title = "Tasks";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section id="home">
    <div class="overlay-section">
        <div class="container">
            <div class="row">
                <div class="col s12">
                    <div class="home-inner">
                        <h1 class="home-title">HI! I'm <span>Tarlan Muradli</span></h1>
                        <p>I'm a Azerbaijan based Web Developer and interested more in Back-End Development than Front-End. I have experience in Linux, Big Data and Cyber Security.</p>
                        @*<a class="hire-me-btn btn waves-effect waves-light btn-large" href="#footer">
                            Read Me <i class="mdi-content-send left"></i>
                        </a>*@
                        <!-- Call to About Button -->
                        @*<button class="btn btn-floating waves-effect waves-light btn-large white call-to-about"><i class="view-icon"></i></button>*@
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<section id="toDoList" style="padding-top: 350px;">
    <div class="facts-overlay">
        <div class="container">
            <h2 class="title">To Do List</h2>

            <a href="/Home/New" class="btn">New Task</a>

            <table class="responsive-table">
                <thead>
                    <tr>
                        <th class="blue-grey-text">Task</th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr style="font-size:18px; font-weight: 500">
                            <td class="teal-text">@item.Task</td>
                            <td><a href="/Home/Update/@item.ID" class="btn">Update</a></td>
                            <td><a href="/Home/Delete/@item.ID" class="btn">Delete</a></td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</section>
